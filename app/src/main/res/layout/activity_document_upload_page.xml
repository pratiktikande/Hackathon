<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    tools:context=".Document_upload_page">

    <TextView
        android:id="@+id/title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Document Upload"
        android:textAlignment="center"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/view_selected_document_window"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/document_selection_btn"
        android:layout_below="@id/folder_selector"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <EditText
        android:id="@+id/document_name_edit_txt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_txt"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:hint="File Name" />

    <Spinner
        android:id="@+id/folder_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_txt"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/document_name_edit_txt" />

    <Button
        android:id="@+id/document_selection_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20sp"
        android:layout_marginBottom="30sp"
        android:width="150dp"
        android:text="Document Selection" />

    <Button
        android:id="@+id/document_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20sp"
        android:layout_marginBottom="30sp"
        android:width="150dp"
        android:text="Document Upload" />

</RelativeLayout>