<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEDFDE"
    tools:context=".Scanner_page">

    <EditText
        android:id="@+id/scanuser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="78dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="124dp"
        android:layout_marginBottom="632dp"
        android:ems="10"
        android:hint="Enter the OTP"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/gni"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="152dp"
        android:layout_marginEnd="49dp"
        android:layout_marginBottom="534dp"
        android:hint="Name of the Gaurdian" />

    <Button
        android:id="@+id/scanbtt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="134dp"
        android:layout_marginEnd="183dp"
        android:layout_marginBottom="246dp"
        android:onClick="onClick"
        android:text="scan" />

    <Button
        android:id="@+id/btnverifyOTP1"
        android:layout_width="313dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="62dp"
        android:layout_marginBottom="409dp"
        android:enabled="false"
        android:text="Verify OTP"
        android:background="@drawable/button_style_new"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <ProgressBar
        android:id="@+id/bar1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="162dp"
        android:layout_marginEnd="201dp"
        android:layout_marginBottom="133dp"
        android:visibility="invisible" />

</RelativeLayout>