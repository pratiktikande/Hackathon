<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".neurology">

    <TextView
        android:id="@+id/Neurology_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neurology Folder Upload"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/Neurology_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/Neurology_select_btn"
        android:layout_below="@id/Neurology_title_txt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/Neurology_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:width="150dp"
        android:text="Select Document" />

    <Button
        android:id="@+id/Neurology_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:width="150dp"
        android:text="upload Document" />
</RelativeLayout>