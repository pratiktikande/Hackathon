<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".skin">

    <TextView
        android:id="@+id/skin_name_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Skin Folder Upload"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/skin_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/skin_select_btn"
        android:layout_below="@id/skin_name_txt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/skin_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:width="130dp"
        android:text="Select Document" />

    <Button
        android:id="@+id/skin_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:width="130dp"
        android:text="Select Document" />

</RelativeLayout>