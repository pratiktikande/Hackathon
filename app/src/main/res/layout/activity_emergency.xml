<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="20dp"
    tools:context=".emergency">

    <TextView
        android:id="@+id/Emergency_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cardiology Folder Upload"
        android:textAlignment="center"
        android:textSize="20dp" />

    <ImageView
        android:id="@+id/emergency_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/emergency_select_btn"
        android:layout_below="@id/Emergency_title_txt"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <Button
        android:id="@+id/emergency_select_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:width="150dp"
        android:text="Select Document" />

    <Button
        android:id="@+id/emergency_upload_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:width="150dp"
        android:text="Upload Document" />

</RelativeLayout>